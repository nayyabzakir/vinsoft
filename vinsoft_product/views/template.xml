    <record model="ir.actions.act_window" id="subgroupo_currency_action">
        <field name="name">Sub Groupo</field>
        <field name="res_model">sub.groupo</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Sub Groupo" id="sub_currency" parent="sales_team.menu_sales" action="subgroupo_currency_action" sequence="12"/>

    <record id="products_currency_view" model="ir.ui.view"> 
        <field name="name">products_currency_view</field> 
        <field name="model">product.wizard</field> 
        <field name="arch" type="xml"> 
            <form>
                <sheet>
                    <group>
                        <group name="right">
                            <field name="products"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="get_product" type="object" string="Insert" class="oe_highlight"/>
                </footer>
            </form>
        </field>
