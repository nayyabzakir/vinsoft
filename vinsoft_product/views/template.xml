    <menuitem name="Groupo" id="grp_currency" parent="sales_team.menu_sales" action="groupo_currency_action" sequence="11"/>

    <record id="subgroupo_currency_view" model="ir.ui.view"> 
        <field name="name">subgroupo_currency_view</field> 
